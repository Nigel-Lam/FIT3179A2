{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "background": "aliceblue",
  "title": "Location of Uranium deposits and Mines in Australia",
  "projection": {"type": "mercator"},
  "layer": [
    {"data": {
      "url": "https://raw.githubusercontent.com/Nigel-Lam/FIT3179A2/refs/heads/main/Datasets/AustraliaMap.json",
      "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue", "stroke": "white"}
    },
    {
    "data": {
      "url": "https://raw.githubusercontent.com/Nigel-Lam/FIT3179A2/refs/heads/main/Datasets/UraniumLocation.csv",
      "format": {"type": "csv"}
      },
    "mark": {"type": "point", "size": 50, "filled": true},
    "encoding": {
      "longitude": {"field": "Longitude", "type": "quantitative"},
      "latitude": {"field": "Latitude", "type": "quantitative"},
      "size": {
        "field": "Deposit", "type": "quantitative",
        "condition": [
          {"test": "datum.Deposit == 0", "value": 150}
        ]
        },
      "shape": {
          "condition": [
            {"test": "datum.Deposit > 0", "value": "circle"},
            {"test": "datum.Deposit == 0", "value": "square"},
          ],
        },
      "color": {
        "field": "Operation",
        "type": "nominal",
        "scale": {
          "domain": ["Deposit", "Operational", "Decomissioned"],
          "range": ["limegreen", "green", "black"]
        }
      },
      "tooltip": [
        {"title": "Mine Name", "field": "Mines", "type": "nominal"},
        {"title": "Deposited Uranium", "field": "Deposit", "type": "quantitative"},
        {"title": "State of Deposit", "field": "Operation", "type": "nominal"}
      ]
      }
    }
  ],
  "transform": [
    {
      "calculate": "coalesce(datum.Operation, 'Unknown')", 
      "as": "Operation"
    },
    {
      "calculate": "coalesce(datum.Deposit, 0)",
      "as": "Deposit"
    }
  ]
}
